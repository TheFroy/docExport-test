<%-include ('../partials/header.ejs') %> 

<div class="container-fluid align-content-center">
    <div class="container col-md-4 col-sm-12 mb-4">
        <div class="card shadow rounded">
            <div class="card-body">
                <form action="/servicios/upd/<%= data.id %>" method="post">
                    <section class="border-bottom py-2">
                        <h1 class="p-1 text-center">Actualizar datos de Servicio</h1>
                    </section>
                    <div class="row justify-content-center">
                        <div class="col-md-8 col-sm-10 my-2">
                            <label for="" class="text-muted">Nombre de servicio</label>
                            <input type="text" class="form-control" value="<%= data.tipo %>" placeholder="Nombre" name="tipo">
                        </div>
                        <div class="col-md-8 col-sm-10 my-2">
                            <label for="" class="text-muted">Precio por dia de servicio</label>
                            <input type="text" class="form-control" value="<%= data.precio_dia %>"  name="precio_dia">
                        </div>
                        <div class="col-md-8 col-sm-10 my-2">
                            <label for="" class="text-muted">Emisora</label>
                            <select type="text" class="form-control" name="id_emisora">
                                <% emisoras.forEach(emi => { %>
                                    <% if (emi.id == data.id_emisora) { %>
                                        <option selected value="<%= emi.id %>"><%= emi.nombre %></option>
                                        <% } else { %>
                                        <option value="<%= emi.id %>"><%= emi.nombre %></option>
                                    <% } %>
                                <% }) %>
                            </select>
                        </div>
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-6 py-2" id="test">
                                    <button type="submit"class="btn btn-primary btn-block">Guardar</button>
                                </div>
                                <div class="col-6 py-2">
                                    <a href="/servicios" class="btn btn-danger btn-block">Cancelar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
</div>
<script>
</script>
<%-include ('../partials/footer.ejs') %> 
