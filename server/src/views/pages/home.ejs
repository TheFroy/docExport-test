<%-include ('../partials/header.ejs') %> 

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 col-sm-12 ">
            <div class="container my-1"> 
                <h1>Cotizaciones realizadas</h1>
                    <table class="table ">
                        <thead>
                          <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Fecha</th>
                            <th scope="col">Cliente</th>
                            <th scope="col">Total</th>
                            <th scope="col"></th>
                          </tr>
                        </thead>
                        <tbody>
                            <% for( let i = 0; i < data.length; i++ ) { %>
                            <tr>
                                <th><%= data[i].id %></th>
                                <td><%= data[i].fecha.toUTCString().split('GMT')[0] %></td>
                                <td><%= data[i].nombre %></td>
                                <td><%= data[i].total %></td>
                                <td><a href="/cotizacion/<%= data[i].id %>" class="btn btn-info">Ver</a></td>    
                            </tr>
                              <% } %>
                        </tbody>
                      </table>
            </div>
        </div>
        <div class="col-md-4 col-sm-12 mb-3">
            <div class="card shadow rounded">
                <div class="card-body">
                    <form action="/">
                        <div class="container">
                            <h3>Nueva cotizacion</h3>
